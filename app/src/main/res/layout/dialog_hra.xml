<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@color/teal_700"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_rent_breakup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:cardElevation="20dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="15dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_detail_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rent Computation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_hra_given"
                android:text="200 rs"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_detail_header"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_hra_10_less"
                android:text="200 rs"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text_hra_given"
                app:layout_constraintTop_toBottomOf="@id/text_hra_given"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_hra_50_less"
                android:text="200 rs"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text_hra_given"
                app:layout_constraintTop_toBottomOf="@id/text_hra_10_less"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_hra_max_claim"
                android:text="200 rs"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/text_hra_given"
                app:layout_constraintTop_toBottomOf="@id/text_hra_50_less"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_rent_declaration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/card_rent_breakup"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_rent_detail"
                android:layout_width="0dp"
                android:text="Rent Receipt Input"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_hra_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/text_rent_detail"
                app:layout_constraintEnd_toEndOf="@id/text_rent_detail"
                app:layout_constraintTop_toBottomOf="@id/text_rent_detail" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>